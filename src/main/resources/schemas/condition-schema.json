{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Condition Schema",
  "properties": {
    "fieldId": {
      "type": "string"
    },
    "operator": {
      "type": "string",
      "enum": ["equals", "notEquals", "greaterThan", "lessThan", "contains"]
    },
    "value": {
      "type": ["string", "boolean", "number"]
    }
  },
  "required": ["fieldId", "operator", "value"]
}