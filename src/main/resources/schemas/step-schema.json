{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Step Schema",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "minimum": 1
    },
    "sectionId": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["id", "title", "sectionId", "order"]
}